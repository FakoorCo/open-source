<!DOCTYPE html>
<html>

  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <style>
      .dropdown-menu {
        background-color: grey !important;
        color: black !important;
      }
  </style>

  <link href="http://vjs.zencdn.net/5.11.7/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/5.11.7/video.js"></script>
  <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </head>

<body>

<div class="total-container">

<div class="header">
  <!-- Fixed navbar -->
  <div class="navbar navbar-fixed-top" role="navigation">
    <div class="container">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">open source</a>
      </div>

      <div class="collapse navbar-collapse pull-right">
        <ul class="nav navbar-nav">
          <li class="icon-bar"><%= link_to 'Courses', courses_path %></li>
        </ul>
              <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                  <%= link_to 'Sign Out', destroy_user_session_path, class:'btn btn-default navbar-btn'%>
                    <% else %>
                  <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-default navbar-btn' %>
                  <%= link_to 'Sign Out', new_user_session_path, class: 'btn btn-default navbar-btn' %>
                <%end %>
                <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Resources <b class="caret"></b></a>
                      <ul class="dropdown-menu" data-no-collapse="true">
                        <li><%= link_to 'Course List', courses_path %></li>
                        <li><%= link_to 'Teach a Course', new_instructor_course_path %></li>
                        <li><a href="#">Enroll</a></li>
                        <li class="divider"></li>
                        <li class="dropdown-header"></li>
                        <li><a href="#">Separated link</a></li>
                        <li><a href="#">One more separated link</a></li>
                      </ul>
                  </li>
              </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>

</div>

<div class="body">

    <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>

</div>

    <%= yield %>

    <br class="clr"/>

    <div class="footer">
         <div class="container">
           <div class="col-xs-12 col-md-6 footer-block">
             <%= link_to 'Teach a Course', new_instructor_course_path %>
             <br/>
             <%= link_to 'My Dashboard', '#' %>
               <br/>
              <%= link_to 'About', '#' %>
              <br/>
              <%= link_to 'Privacy Policy', '#' %>
           </div>
        </div>
    </div>

  </div>

  </body>
</html>
