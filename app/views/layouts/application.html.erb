<!DOCTYPE html>
<html>

  <head>
    <title>Open Source</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <style>
      .dropdown-menu {
        background-color: grey !important;
        color: black !important;
      }
  </style>

  <link href="http://vjs.zencdn.net/5.11.7/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/5.11.7/video.js"></script>
  <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  <link href="https://fonts.googleapis.com/css?family=Warnes" rel="stylesheet">

  </head>

<body>

<div class="total-container">

<div class="header">
  <!-- Fixed navbar -->
  <div class="navbar navbar-fixed-top" role="navigation">
    <div class="nav-container">
      <a class="navbar-brand" href="/">open source</a>

      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse pull-right">
        <ul class="nav navbar-nav">
          <li class="icon-bar"><%= link_to 'Courses', courses_path %></li>
        </ul>
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Resources <b class="caret"></b></a>
                      <ul class="dropdown-menu" data-no-collapse="true">
                        <li><%= link_to 'Course List', courses_path %></li>
                        <li><%= link_to 'Teach a Course', new_instructor_course_path %></li>
                        <li><a href="#">Enroll</a></li>
                        <li class="divider"></li>
                        <li
                         class="dropdown-header"></li>
                        <% if user_signed_in? %>
                          <li><%= link_to 'My Dashboard', dashboard_path%></li>
                          <li><%= link_to 'Sign Out', destroy_user_session_path %></li>
                            <% else %>
                          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
                          <li><%= link_to 'Sign In', new_user_session_path %></li>
                        <%end %>
                      </ul>
                  </li>
              </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>

</div>

<div class="body">

    <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>

</div>

    <%= yield %>

    <br class="clr"/>

<div id="footer">
  <div class="container">
    <div class="col-xs-12 col-sm-3">
      <b style=text-decoration:underline >Teachers</b>
      <br /><br/>
      <%= link_to 'Teach a Course', new_instructor_course_path %>
      <br />
      <%= link_to 'My Dashboard', dashboard_path %>
    </div>
    <div class="col-xs-12 col-sm-3">
      <b style=text-decoration:underline >About</b>
      <br /><br/>
      <%= link_to 'Team', '#' %>
      <br />
      <%= link_to 'Careers', '#' %>
      <br />
      <%= link_to 'Privacy Policy', privacy_path %>
    </div>
    <div class="col-xs-12 col-sm-3">
      <b style=text-decoration:underline >Contact</b>
      <br /><br/>
      kfrench09@gmail.com
      <br />
      Brooklyn, NY
    </div>
    <div class="col-xs-12 col-sm-3 social">
      <b style=text-decoration:underline >Social</b>
      <br/>
      <br/>
      <%= link_to 'http://github.com/frenchamnesty' do %>
        <%= image_tag 'github.png', class: 'social-button' %>
      <% end %>
      <%= link_to 'https://www.linkedin.com/in/frenchkathleen' do %>
        <%= image_tag 'linkedin.png', class: 'social-button' %>
      <% end %>
        <%= image_tag 'twitter.png', class: 'social-button' %>
    </div>
  </div>
</div>


  </div>

  </body>
</html>
