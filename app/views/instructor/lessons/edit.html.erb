<div class="booyah-box col-xs-10 col-xs-offset-1">
  <%= simple_form_for @lesson, url: instructor_lesson_path(@lesson) do |f| %>
  <div class="modal-body">
      <%= f.input :title %>
      <%= f.input :subtitle %>
      <%= f.input :video %><br/>
      <%= f.input :embed, label: 'Copy YouTube Link to Embed Video: ' %>
  </div><br/>
  <div class="modal-footer">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
    <%= link_to 'Delete Lesson', instructor_section_path(@lesson), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger btn-sm pull-right' %>
  </div>
  <% end %>
  <br/>
</div>
