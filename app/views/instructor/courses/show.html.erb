<script>
  $(function() {
    $('.new-lesson-button').click(function( event ) {
      var lessonUrl = $( event.target).data('lesson-url');
      $('#newLessonForm').attr('action', lessonUrl);
      $('#newLessonModalLabel').html( 'Add Lesson' + $(event.target).data('section-title') );
   });

   $('.lessons').sortable({
     update: function( event, ui ) {
       $.ajax({
         type: 'PUT',
         url: ui.item.data('update-url'),
         dataType: 'json',
         data: { lesson: { row_order_position: ui.item.index() } }
       });
      }
    });

    $('.sections').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { section: { row_order_position: ui.item.index() } }
        });
       }
     });

   });
</script>

<br/>

<div class="booyah-box col-xs-10 col-xs-offset-1">

  <div class="text-center"><h1><%= current_course.title %></h1>
    <br/><%= image_tag current_course.image, class:'img-responsive' %><br/>
  </div>

        <br/>

    <div class="text-center">
      <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-primary btn-lg'%>
      <br/><br/>
      <!-- Button trigger modal -->
        <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#newSectionModal">
          Add Section
        </button>
    </div>

    <br/>

      <ul class="sections">

          <% current_course.sections.rank(:row_order).each do |section| %>
              <li data-update-url="<%= instructor_section_path section%>" class="section-li">
                <div class="header pull-left">
                  <span class="glyphicon glyphicon-option-vertical"></span>
                  <b><%= section.title %></b>
                </div>

                <button type="button" class="btn btn-primary btn-sm pull-right new-lesson-button" data-toggle="modal" data-target="#newLessonModal" data-lesson-url="<%= instructor_section_lessons_path(section) %>">
                  New Lesson...
                </button>
                  <br/><br/>
                <%= button_to 'Edit Section', edit_instructor_section_path(section), method: :get, class: 'btn btn-primary btn-sm pull-right new-lesson-button' %>

                <br class="clr"/>
                <br class="clr"/>

                <ul class="lessons">
                  <% section.lessons.rank(:row_order).each do |lesson| %>

                  <li data-update-url="<%= instructor_lesson_path lesson %>">
                      <div class="row">

                        <div class="col-xs-1">
                          <br/>
                          <span class="glyphicon glyphicon-option-vertical"></span>
                        </div>

                        <div class="col-xs-10 text-center">
                          <p>
                            <b><%= lesson.title %></b>
                          </p>
                          <p>
                            <%= lesson.subtitle %>
                          </p>
                        </div>

                      </div>

                    <br class="clr" />

                  </li>

                <% end %>
              </ul>

              <br class="clr" />

            </li>
          <% end %>

        </ul>

  </div>


  <!-- Modal -->
  <div class="modal fade" id="newSectionModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h4 class="modal-title" id="newSectionModalLabel">Add a new section</h4>
        </div>
        <%= simple_form_for @section, url: instructor_course_sections_path(current_course) do |f| %>
          <div class="modal-body">
            <%= f.input :title %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.submit "Add a section", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>


<!-- Lesson Modal -->
<div class="modal fade" id="newLessonModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="newLessonModalLabel">Add a new lesson:</h4>
      </div>
      <%= simple_form_for @lesson, url: "#", html: {id: 'newLessonForm' } do |f| %>
        <div class="modal-body">
            <%= f.input :title %>
            <%= f.input :subtitle %>
            <%= f.input :video %><br/>
            <%= f.input :embed, label: 'Copy YouTube Link to Embed Video:' %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Submit", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
