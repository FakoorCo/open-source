<br/><br/>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Course Index</h1>
  <hr />

  <% @courses.each do |course| %>
    <h3><b><%= link_to course.title, course_path(course) %></b></h3>
    <br/><%= image_tag course.image, class:'img-responsive' unless course.image.blank? %><br/>
    <div class="col-sm-8 col-xs-12">
      <p><%= course.description %></p>
    </div>
    <div class="col-sm-4 col-xs-12 text-right">
      <%= link_to 'More Details...', course_path(course), class: 'enjoy-css' %>
    </div>
    <br class="clr" />
  <% end %>
</div>
