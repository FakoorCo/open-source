
<br/>

<div class="booyah-box col-xs-10 col-xs-offset-1">

  <h1><%= @course.title %></h1>

  <span class="label label-default pull-left">
    Course Cost: <%= number_to_currency @course.cost %>
  </span>

  <% if current_user && current_user == @course.user %>
    <%= link_to 'Instructor Portal', instructor_course_path(@course), class: 'button-pill pull-right', style:"border:1px solid" %>
  <% end %>

      <br/>
      <br/>
      <br/>

  <b>Course Description:</b>
    <br/><br/>
  <%= @course.description %>

  <br/><br/><br/>

  <%= image_tag @course.image, class:'img-responsive' unless @course.image.blank? %>

  <br/><br/>

<div class="payment">
  <% if current_user %>
    <% if current_user.enrolled_in?(@course) %>
      <h3 class="label label-info pull-left">Enrolled</h3>
    <% else %>
      <% if @course.free? %>
        <%= link_to 'Enroll', course_enrollments_path(@course), class: 'button-pill pull-right', method: :post %>
      <% else %>
        <%= form_tag course_enrollments_path(@course) do %>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-email="<%= current_user.email %>"
                data-description="<%= @course.title %> (<%= number_to_currency @course.cost %>)"
                data-amount="<%= (@course.cost * 100).to_i %>"
                data-locale="auto"></script>
        <% end %>
      <% end %>
    <% end %>
    <% else %>
    <h3 class="badge badge-info">Sign In to Enroll!</h3>
  <% end %>
</div>

<br class="clear"/>

<div class="col-xs-12">
  <% @course.sections.rank(:row_order).each do |section| %>
  <br/><br/>

  <div class="section">
    <h3><%= section.title %></h3>
    <br/><br/>

      <div class="col-xs-11 text-center">
        <% section.lessons.rank(:row_order).each do |lesson| %>
            <div class="lesson">
                <% if current_user && current_user.enrolled_in?(@course) %>
                  <%= link_to lesson_path(lesson) do %>
                    <b><%= lesson.title %></b>
                      <br/>
                    <p><%= lesson.subtitle %></p>
                    <% end %>
                <% else %>
                    <b><%= lesson.title %></b>
                      <br/>
                    <p><%= lesson.subtitle %></p>
                <% end %>
                <br class="clear"/>
            </div>
          <% end %>
      </div>
    </div>

    <br class="clear"/>

</div>

<br class="clear"/>

<% end %>
<br/><br/>

</div>
</div>





</div>
